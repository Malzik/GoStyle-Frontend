<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CouponDetailsActivity">

    <include
        layout="@layout/l_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imageViewCouponDetails"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:adjustViewBounds="true"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/textViewNameDetails"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D5D5D5"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Name De Malade"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textViewCodeDetails"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E6E6E6"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:gravity="center"
        android:text="Code : 0450395"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewDeadLineDetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F1F1F1"
        android:fontFamily="@font/open_sans_semibold_italic"
        android:gravity="center"
        android:text="Utiliser avant le : 22/09/1948" />


        <TextView
            android:id="@+id/textViewDescriptionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_light"
            android:text="description description description description description description description description "
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Ajouter le code" />
    </LinearLayout>

</LinearLayout>