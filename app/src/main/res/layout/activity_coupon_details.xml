<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_color_appli"
    android:orientation="vertical"
    tools:context=".CouponDetailsActivity">

    <include
        layout="@layout/l_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewCouponDetails"
                android:layout_width="match_parent"
                android:layout_height="269dp"
                android:adjustViewBounds="true"
                app:srcCompat="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/textViewNameDetails"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Name De Malade"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textViewCodeDetails"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/open_sans_condensed_bold"
                android:gravity="center"
                android:text="Code : 0450395"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewDeadLineDetails"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/open_sans_semibold_italic"
                android:gravity="center"
                android:text="Utiliser avant le : 22/09/1948" />


            <TextView
                android:id="@+id/textViewDescriptionDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/open_sans_light"
                android:text="description description description description description description description description "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/add_offers"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/border_radius"
                android:fontFamily="@font/bangers"
                android:gravity="center"
                android:text="Ajouter le code"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>



    </ScrollView>

</LinearLayout>